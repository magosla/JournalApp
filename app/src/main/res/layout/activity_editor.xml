<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp"
    tools:context=".EditorActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/color_gray"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_corners_5"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/color_gray"
            android:inputType="text"
            android:backgroundTint="@android:color/transparent"
            android:focusable="true"
            android:hint="@string/journal_title"
            tools:targetApi="lollipop" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/color_gray"
        android:background="@drawable/rounded_corners_5"
        app:layout_constraintBottom_toTopOf="@+id/rg_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:textColorHint="@color/color_gray"
            android:backgroundTint="@android:color/transparent"
            android:gravity="top|start"
            android:hint="@string/journal_content"
            tools:targetApi="lollipop" />
    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:id="@+id/rg_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_corners_5"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_type_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_describes_your_journal"
            />

        <RadioButton
            android:id="@+id/rb_thought"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="@string/thoughts"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"/>

        <RadioButton
            android:id="@+id/rb_feelings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:padding="5dp"
            android:text="@string/feelings" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>